{
  "name": "node-tech-mail",
  "version": "3.0.3",
  "description": "Technical module used to wrap SendGrid APIs to send mails.",
  "license": "MIT",
  "main": "techMail.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/AirVantage/node-tech-mail.git"
  },
  "dependencies": {
    "ejs": "^2.1.4",
    "email-templates": "^2.5.4",
    "lodash": "^4.16.0",
    "node-tech-logger": "git://github.com/AirVantage/node-tech-logger.git#3.x",
    "nodemailer": "^1.3.0",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "nodemailer-stub-transport": "^0.1.5"
  },
  "optionalDependencies": {
    "winston-syslog": "^1.2.5"
  },
  "devDependencies": {
    "eslint": "^4.1.1",
    "grunt": "^0.4.5",
    "grunt-release": "^0.13.0",
    "grunt-tag": "^0.1.0",
    "prettier": "^1.5.2"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "linebreak-style": [
        "error",
        "unix"
      ],
      "max-params": [
        "warn",
        3
